<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/log_user_dp"

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="@+id/log_user_name"
        app:layout_constraintBottom_toBottomOf="@+id/log_punch"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/log_user_name"
        android:text="Manish Nandaniya"
        android:textColor="@android:color/black"
         android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/log_user_dp"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/log_punch"
        android:text="13:26:52, 13-07-2019"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/log_user_name"
        app:layout_constraintLeft_toRightOf="@+id/log_user_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>